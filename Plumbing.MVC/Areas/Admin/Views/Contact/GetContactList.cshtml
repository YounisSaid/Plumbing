@model List<ContactListMV>
@{
    ViewData["Title"] = "GetContactList";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h5 class="card-title"> Contact Information</h5>

<nav>
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Dashboard" asp-action="Index">Dashboard</a></li>
        <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Contact" asp-action="GetContactList">Contact</a></li>
    </ol>
</nav>

<div class="card">
    <div class="card-body">

        <table class="table table-hover">
            <thead>
                <tr>
                    <th scope="col">Location</th>
                    <th scope="col">Email</th>
                    <th scope="col">Call</th>
                    <th scope="col">Map Link</th>
                    <th scope="col">Created Date</th>
                    <th scope="col">Updated Date</th>
                    <th scope="col">Edit</th>
                    <th scope="col">Delete</th>
                </tr>
            </thead>
            <tbody>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Location</td>
                        <td>@item.Email</td>
                        <td>@item.Call</td>
                        @if(!string.IsNullOrEmpty(item.Map))
                        {
                            <td>Assigned</td>
                        }
                        else
                        {
                            <td>Not Assigned</td>
						}
                        <td>@item.CreatedAt</td>
                        <td>@item.UpdatedAt</td>

                        <td>
                            <a asp-area="Admin" asp-controller="Contact" asp-action="UpdateContact" asp-route-id="@item.Id" data-id="@item.Id" class="btn btn-warning btn-sm"> Edit</a>
                        </td>
                        <td>
                            <a asp-area="Admin" asp-controller="Contact" asp-action="DeleteContact" asp-route-id="@item.Id" data-id="@item.Id" class="btn btn-danger btn-sm"> Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <div>
            <a asp-area="Admin" asp-controller="Contact" asp-action="AddContact" class="btn btn-success btn-sm"> Add Contact</a>
        </div>

    </div>
</div>