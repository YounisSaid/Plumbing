@model AboutAddVM
@{
    ViewData["Title"] = "AddAbout";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<div>
    <h5 class="card-title">Add New About Us</h5>

    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Dashboard" asp-action="Index">Dashboard</a></li>
            <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="About" asp-action="GetAboutList">About Us</a></li>
            <li class="breadcrumb-item active">Add</li>
        </ol>
    </nav>
</div>

<div class="card">
    <div class="card-body pt-3">
        <form asp-area="Admin" asp-controller="About" asp-action="AddAbout" method="post" class="row g-3" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="FileName" value="test"/>
            <input type="hidden" asp-for="FileType" value="test"/>

            <div class="col-md-12">
                <div class="form-floating">
                    <input asp-for="Header" type="text" class="form-control" placeholder="Header">
                    <label asp-for="Header">Header</label>
                    <span asp-validation-for="Header" class="text-danger"></span>
                </div>
            </div>

            <div class="col-md-12">
                <div class="form-floating">
                    <textarea asp-for="Description" type="text" class="form-control" placeholder="Description"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                    <label asp-for="Description">Description</label>
                </div>
            </div>

            <div class="col-md-3">
                <div class="form-floating">
                    <input asp-for="Clients" type="number" class="form-control" placeholder="Clients">
                    <span asp-validation-for="Clients" class="text-danger"></span>
                    <label asp-for="Clients">Clients</label>
                </div>
            </div>
            <div class="col-md-3">
                <div class="form-floating">
                    <input asp-for="HoursOfSupport" type="number" class="form-control" placeholder="Hours Of Support">
                    <span asp-validation-for="HoursOfSupport" class="text-danger"></span>
                    <label asp-for="HoursOfSupport">Hours Of Support</label>
                </div>
            </div>
            <div class="col-md-3">
                <div class="form-floating">
                    <input asp-for="HardWorkers" type="number" class="form-control" placeholder="HardWorkers">
                    <span asp-validation-for="HardWorkers" class="text-danger"></span>
                    <label asp-for="HardWorkers">HardWorkers</label>
                </div>
            </div>
            <div class="col-md-3">
                <div class="form-floating">
                    <input asp-for="Projects" type="number" class="form-control" placeholder="Projects">
                    <span asp-validation-for="Projects" class="text-danger"></span>
                    <label asp-for="Projects">Projects</label>
                </div>
            </div>

            <div class="col-md-3">
                <div class="form-floating">
                    <input asp-for="SocialMedia.Facebook" type="text" class="form-control" placeholder="Facebook">
                    <span asp-validation-for="SocialMedia.Facebook" class="text-danger"></span>
                    <label asp-for="SocialMedia.Facebook">Facebook</label>
                </div>
            </div>
            <div class="col-md-3">
                <div class="form-floating">
                    <input asp-for="SocialMedia.Instagram" type="text" class="form-control" placeholder="Instagram">
                    <span asp-validation-for="SocialMedia.Instagram" class="text-danger"></span>
                    <label asp-for="SocialMedia.Instagram">Instagram</label>
                </div>
            </div>
            <div class="col-md-3">
                <div class="form-floating">
                    <input asp-for="SocialMedia.Twitter" type="text" class="form-control" placeholder="Twitter">
                    <span asp-validation-for="SocialMedia.Twitter" class="text-danger"></span>
                    <label asp-for="SocialMedia.Twitter">Twitter</label>
                </div>
            </div>
            <div class="col-md-3">
                <div class="form-floating">
                    <input asp-for="SocialMedia.LinkedIn" type="text" class="form-control" placeholder="LinkedIn">
                    <span asp-validation-for="SocialMedia.LinkedIn" class="text-danger"></span>
                    <label asp-for="SocialMedia.LinkedIn">LinkedIn</label>
                </div>
            </div>

            <div class="col-md-12">
                <div class="form-floating">
                    <input asp-for="Photo" accept="image/*" type="file" class="form-control" placeholder="Photo">
                   
                </div>
            </div>

            <div class="text-center">
                <button type="submit" class="btn btn-primary">Submit</button>
                <button type="reset" class="btn btn-secondary">Reset</button>
            </div>
        </form>
    </div>
</div>